<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>

        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryLight">@color/primary_light</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="colorControlActivated">@color/accent_dark</item>
        <item name="android:textAppearanceMedium">@style/TextAppearance.AppCompat.Medium.Primary</item>
        <item name="textAppearanceListItemSecondary">@style/TextAppearance.AppCompat.Body1.Secondary</item>
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
    </style>

    <style name="AppTheme.NavigationDrawer" />

    <style name="NoWindowBaseTheme" parent="AppTheme">
        <item name="android:windowBackground">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="windowActionBar">false</item>
    </style>
    <style name="NoWindowTheme" parent="NoWindowBaseTheme" />

    <style name="PopupBaseTheme" parent="AppTheme">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateAlwaysHidden</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="PopupTheme" parent="PopupBaseTheme">
    </style>

    <style name="HeaderLayout" />

    <style name="Base.Widget.Toolbar" parent="Widget.AppCompat.Toolbar">
        <item name="android:minHeight">?attr/actionBarSize</item>
        <item name="android:background">?attr/colorPrimary</item>
        <item name="theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
    </style>

    <style name="Widget">
    </style>

    <style name="Widget.Toolbar" parent="Base.Widget.Toolbar"/>
    <style name="Widget.Toolbar.NoElevation"/>

    <style name="Widget.PagerTitleStrip">
        <item name="android:background">?attr/colorPrimaryLight</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Body1</item>
    </style>

    <style name="TextAppearance.AppCompat.Medium.Primary">
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>

    <style name="TextAppearance.AppCompat.Body1.Secondary">
        <item name="android:textColor">?android:attr/textColorSecondary</item>
    </style>

    <style name="Card" parent="CardView.Light">
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="cardBackgroundColor">@color/card_background</item>
        <item name="cardUseCompatPadding">true</item>
    </style>

    <style name="Card.Header" parent="@android:style/Widget.TextView">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Headline</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:paddingTop">20dp</item>
    </style>
    <style name="Card.Header.First">
        <item name="android:paddingTop">0dp</item>
    </style>

    <style name="Card.Text" parent="@android:style/Widget.TextView">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Body1</item>
    </style>
    <style name="Card.Divider" parent="">
        <item name="android:background">?android:attr/listDivider</item>
    </style>
    <style name="Card.Label" parent="Card.Text">
    </style>
    <style name="Card.Label.Price">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Medium.Primary</item>
    </style>

    <style name="Card.Value" parent="Card.Text">
        <item name="android:layout_gravity">right</item>
    </style>

    <style name="Card.Value.Price">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Body1.Secondary</item>
        <item name="android:textSize">20sp</item>
    </style>
    <style name="Card.Value.Price.Suffix"/>

    <style name="Card.Value.Left">
        <item name="android:layout_gravity">left</item>
    </style>

    <style name="Card.RatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/ic_toggle_star_normal</item>
        <item name="android:indeterminateDrawable">@drawable/ic_toggle_star_normal</item>
        <item name="android:minHeight">35dip</item>
        <item name="android:maxHeight">35dip</item>
        <item name="android:isIndicator">true</item>
    </style>

    <style name="Dialog" />
    <style name="Dialog.RatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:layout_gravity">center</item>

        <item name="android:progressDrawable">@drawable/ic_toggle_star_big</item>
        <item name="android:indeterminateDrawable">@drawable/ic_toggle_star_big</item>
    </style>
</resources>

