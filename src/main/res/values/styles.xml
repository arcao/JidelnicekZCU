<resources>

    <style name="AppBaseTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>

        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryLight">@color/primary_light</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="colorControlActivated">@color/accent_dark</item>

        <item name="android:textAppearanceMedium">@style/TextAppearance.AppCompat.Medium.Primary
        </item>
        <item name="textAppearanceListItemSecondary">
            @style/TextAppearance.AppCompat.Body1.Secondary
        </item>

        <item name="drawerArrowStyle">@style/Widget.AppTheme.DrawerArrowStyle</item>
        <item name="android:windowAnimationStyle">@style/Animation.Fade</item>
    </style>

    <style name="Animation.Fade" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@android:anim/fade_in</item>
        <item name="android:activityOpenExitAnimation">@android:anim/fade_out</item>
        <item name="android:activityCloseEnterAnimation">@android:anim/fade_in</item>
        <item name="android:activityCloseExitAnimation">@android:anim/fade_out</item>
    </style>

    <style name="AppBaseTheme.DialogWhenLarge" parent="Theme.AppCompat.Light.DialogWhenLarge">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>

        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryLight">@color/primary_light</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="colorControlActivated">@color/accent_dark</item>

        <item name="android:colorBackground">@android:color/white</item>

        <item name="android:textAppearanceMedium">@style/TextAppearance.AppCompat.Medium.Primary
        </item>
        <item name="textAppearanceListItemSecondary">
            @style/TextAppearance.AppCompat.Body1.Secondary
        </item>
        <item name="drawerArrowStyle">@style/Widget.AppTheme.DrawerArrowStyle</item>
        <item name="android:windowAnimationStyle">@style/Animation.Fade</item>
    </style>

    <style name="AppBaseTheme.Settings" parent="@style/PreferenceFixTheme.Light.DarkActionBar">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>

        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryLight">@color/primary_light</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>

        <item name="drawerArrowStyle">@style/Widget.AppTheme.DrawerArrowStyle</item>
        <item name="preferenceCategory_marginBottom">0dp</item>
        <item name="android:windowAnimationStyle">@style/Animation.Fade</item>
    </style>


    <style name="AppTheme" parent="AppBaseTheme"/>

    <style name="AppTheme.NavigationDrawer"/>

    <style name="AppTheme.Settings" parent="AppBaseTheme.Settings"/>

    <style name="AppTheme.DialogWhenLarge" parent="AppBaseTheme.DialogWhenLarge"/>

    <style name="Base.Widget.Toolbar" parent="Widget.AppCompat.Toolbar">
        <item name="android:minHeight">?attr/actionBarSize</item>
        <item name="android:background">?attr/colorPrimary</item>
        <item name="theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
    </style>

    <style name="Widget"/>

    <style name="Widget.AppTheme"/>

    <style name="Widget.AppTheme.Toolbar" parent="Base.Widget.Toolbar"/>

    <style name="Widget.AppTheme.Toolbar.NoElevation"/>

    <style name="Widget.AppTheme.PagerTitleStrip">
        <item name="android:background">?attr/colorPrimaryLight</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Body1</item>
    </style>

    <style name="TextAppearance.AppCompat.Medium.Primary">
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>

    <style name="TextAppearance.AppCompat.Body1.Secondary">
        <item name="android:textColor">?android:attr/textColorSecondary</item>
    </style>

    <style name="Widget.AppTheme.CardView" parent="CardView.Light">
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="cardBackgroundColor">@color/card_background</item>
        <item name="cardUseCompatPadding">true</item>
    </style>

    <style name="Widget.AppTheme.CardView.Header" parent="@android:style/Widget.TextView">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Headline</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:paddingTop">20dp</item>
    </style>

    <style name="Widget.AppTheme.CardView.Header.First">
        <item name="android:paddingTop">0dp</item>
    </style>

    <style name="Widget.AppTheme.CardView.Text" parent="@android:style/Widget.TextView">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Body1</item>
    </style>

    <style name="Widget.AppTheme.CardView.Label" parent="Widget.AppTheme.CardView.Text">
    </style>

    <style name="Widget.AppTheme.CardView.Label.Price">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Medium.Primary</item>
    </style>

    <style name="Widget.AppTheme.CardView.Value" parent="Widget.AppTheme.CardView.Text">
        <item name="android:layout_gravity">right</item>
    </style>

    <style name="Widget.AppTheme.CardView.Value.Price">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Body1.Secondary</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="Widget.AppTheme.CardView.Value.Price.Suffix"/>

    <style name="Widget.AppTheme.RatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/ic_toggle_star_normal</item>
        <item name="android:indeterminateDrawable">@drawable/ic_toggle_star_normal</item>
        <item name="android:minHeight">35dip</item>
        <item name="android:maxHeight">35dip</item>
        <item name="android:isIndicator">true</item>
    </style>

    <style name="Widget.AppTheme.RatingBar.Dialog" parent="@android:style/Widget.RatingBar">
        <item name="android:layout_gravity">center</item>

        <item name="android:progressDrawable">@drawable/ic_toggle_star_big</item>
        <item name="android:indeterminateDrawable">@drawable/ic_toggle_star_big</item>
    </style>

    <style name="Widget.AppTheme.DrawerArrowStyle" parent="@style/Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@android:color/white</item>
    </style>
</resources>

