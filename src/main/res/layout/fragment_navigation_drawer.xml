<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:orientation="vertical"
             android:background="@color/drawer_background"
             tools:context="com.arcao.menza.fragment.NavigationDrawerFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="8dp"
        android:background="@color/primary"
        android:paddingTop="8dp"
        android:paddingBottom="8dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="8dp"
            android:drawableLeft="@drawable/ic_launcher"
            android:drawablePadding="8dp"
            android:gravity="center_vertical"
            android:text="@string/app_name"
            android:singleLine="true"
            android:textAppearance="@style/TextAppearance.AppCompat.Title.Inverse"/>
        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="64dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium.Inverse"
            tools:text="Menza Bory"/>
     </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/place_list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:scrollbars="vertical"
        android:listSelector="@drawable/drawer_selector_background"
        tools:listitem="@layout/drawer_place_item"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:background="@color/drawer_divider" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/action_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="vertical"
        android:background="@color/drawer_background"
        android:listSelector="@drawable/drawer_selector_background"
        tools:listitem="@layout/drawer_place_item"/>
</LinearLayout>
